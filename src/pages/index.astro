---
import { Image } from "astro:assets";
import {
  MedalIcon,
  GraduationCapIcon,
  MailIcon,
  LinkedinIcon,
} from "lucide-preact";
import AppLayout from "@Layouts/AppLayout.astro";
import { profileData, socialIcons } from "@Data/profile";
import type { SocialType } from "@AppTypes/data";
import Tile from "@Components/Tile.astro";
import Skill from "@Components/Skill.astro";

const meImg = profileData.avatar.landing;
const bioMeImg = profileData.avatar.bio!;
---

<AppLayout title={profileData.pageTitle} username={profileData.info.name}>
  <section id="me" class="section-me">
    <div class="landing-container">
      <div class="landing-photo">
        <Image class="landing-me" src={meImg} alt="Me" />
      </div>
      <div class="landing-info">
        <p>Hi, I'm</p>
        <h1>{profileData.info.name}</h1>
        <h2>{profileData.info.title}</h2>
        <div class="landing-cta">
          <a
            class="btn btn-cv"
            href="https://github.com/nhulox97/resume/blob/main/Sergio.Bernal.Resume.pdf"
            target="_blank">Download CV</a
          >
          <button class="btn btn-contact">
            <a href="#contact">Contact Info</a></button
          >
        </div>
        <div class="landing-socials">
          {
            Object.entries(profileData.social).map(([index, url]) => {
              const icon = index as SocialType;
              const Icon = socialIcons[icon];

              return (
                <a href={url} class="social" target="_blank">
                  <Icon size={28} />
                </a>
              );
            })
          }
        </div>
      </div>
    </div>
  </section>
  <section id="bio" class="section-bio">
    <div class="bio-container">
      <div class="bio-title">
        <p>Get To Know More</p>
        <h1>About Me</h1>
      </div>
      <div class="bio-info">
        <div class="bio-photo">
          <Image class="bio-me" src={bioMeImg} alt="Me bio" />
        </div>
        <div class="bio-more">
          <div class="bio-tiles">
            <Tile
              Icon={MedalIcon}
              title="Experience"
              line1={profileData.info.yearsOfExperience}
              line2={profileData.info.title}
            />
            <Tile
              Icon={GraduationCapIcon}
              title="Education"
              line1={profileData.info.education}
            />
          </div>
          <p class="bio-desc">
            {profileData.info.bio}
          </p>
        </div>
      </div>
    </div>
  </section>
  <section id="skills" class="section-skills">
    <div class="section-container">
      <div class="section-title">
        <p>Explore my</p>
        <h1>Skills</h1>
      </div>
      <div class="skills">
        {profileData.skills.map((skill) => <Skill skill={skill} />)}
      </div>
    </div>
  </section>
  <section id="contact" class="section-contact">
    <div class="section-container">
      <div class="section-title">
        <p>Get In Touch</p>
        <h1>Contact Me</h1>
      </div>
      <div class="contact-cta">
        <div class="contact-card">
          <MailIcon size={28} />
          <a href={`mailto:${profileData.info.email}`}
            >{profileData.info.email}</a
          >
        </div>
        <div class="contact-card">
          <LinkedinIcon size={28} />
          <a href={profileData.social.linkedin} target="_blank">LinkedIn</a>
        </div>
      </div>
    </div>
  </section>
</AppLayout>

<style>
  section {
    display: flex;
    flex-direction: column;
    min-height: 90dvh;
    overflow: visible;
  }

  section + #skills {
    margin-top: 5em;
    justify-content: center;
    min-height: 90dvh;
    overflow: visible;
  }

  .landing-container {
    display: flex;
    flex-direction: row;
    gap: 3em;
    justify-content: center;
    align-items: center;
    height: 90dvh;
  }

  .landing-container > div {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .landing-container > div > * {
    margin-block: 5px;
  }

  .landing-photo > .landing-me {
    clip-path: circle();
    height: 350px;
    width: 350px;
  }

  .landing-info > p {
    font-weight: 600;
    color: var(--fg-alt-col);
    font-size: 1.1em;
  }

  .landing-info > h2 {
    color: var(--primary-col);
  }

  .landing-socials {
    display: flex;
    flex-direction: row;
    gap: 1em;
    padding-block-start: 10px;
  }

  .landing-socials > .social {
    color: var(--fg-alt-col);
  }

  .landing-socials > .social:hover {
    color: var(--fg-col);
    transition: color 0.2s ease-in-out;
    transtion: -webkit-color 0.2s ease-in-out;
  }

  .landing-cta {
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding-block-start: 10px;
  }

  .btn {
    border: 1.25px solid var(--fg-col);
    border-radius: 32px;
    font-size: 12px;
    font-weight: 700;
    margin-inline: 1em;
    padding-inline: 18px;
    padding-block: 10px;
    transition: 0.4s;
  }

  .btn-cv:hover {
    background-color: var(--fg-col);
    color: var(--bg-col);
  }

  .btn-contact {
    background-color: var(--fg-col);
    color: var(--bg-col);
  }

  .btn-contact:hover {
    background-color: var(--fg-alt-col);
    border-color: var(--fg-alt-col);
    color: var(--bg-alt-col);
  }

  .bio-container {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    height: 90dvh;
  }

  .bio-info {
    display: flex;
    flex-direction: row;
    gap: 2em;
  }

  .bio-photo {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .bio-photo > .bio-me {
    border-radius: 20px;
    height: 300px;
    width: 300px;
  }

  .bio-title {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .bio-title > p {
    color: var(--fg-alt-col);
    font-size: 16px;
    margin-block-end: 20px;
  }

  .bio-more {
    display: flex;
    flex-direction: column;
    gap: 1.5em;
    width: 100%;
  }

  .bio-tiles {
    display: flex;
    justify-content: space-evenly;
    gap: 1em;
  }

  .bio-desc {
    color: var(--fg-col);
    font-size: 18px;
    text-align: justify;
  }

  .section-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 4em;
  }

  #contact > .section-container {
    height: 90dvh;
  }

  .section-title {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6em;
  }

  .section-title > p {
    font-size: 1em;
    color: var(--fg-alt-col);
  }

  .contact-cta {
    border: 1.5px solid var(--fg-alt-col);
    border-radius: 32px;
    display: flex;
    gap: 5rem;
    flex-direction: row;
    padding: 20px 50px;
  }

  .contact-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 0.7rem;
  }

  .contact-card > a {
    font-weight: 600;
    border-bottom: 2px solid transparent;
  }

  .contact-card > a:hover {
    color: var(--primary-col);
    border-bottom: 2px solid var(--primary-alt-col);
    transition: border-bottom 0.2s ease-in-out;
    transition: -webkit-border-bottom 0.2s ease-in-out;
    transition: color 0.2s ease-in-out;
    transtion: -webkit-color 0.2s ease-in-out;
  }

  .skills {
    align-items: stretch;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 2em;
    width: 100%;
  }

  @media (max-width: 725px) {
    section {
      height: fit-content;
      margin-block-end: 3em;
      padding-block-start: 10dvh;
      overflow: auto;
    }

    .landing-container {
      display: flex;
      flex-direction: column;
      gap: 1.25em;
    }

    .bio-container {
      gap: 5rem;
    }

    .bio-info {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .bio-photo > .bio-me {
      height: 280px;
      width: 280px;
    }

    .bio-tiles {
      flex-direction: column;
    }

    .landing-photo > .landing-me {
      height: 280px;
      width: 280px;
    }

    .contact-cta {
      align-items: center;
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }
  }
</style>
